<ui:Page x:Class="DotnetGUI.Page.RunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DotnetGUI.Page"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunPage">

    <Grid>
        <Grid x:Name="grid_main" Margin="10,10,10,10">
            <Label Content="Run" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>
            <Label Content="无需任何显式编译或启动命令即可运行源代码。" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Margin="0,43,0,0" Foreground="#FF646464"/>


            <Label Content="项目:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" VerticalContentAlignment="Center" Margin="0,66,0,0"/>
            <ComboBox x:Name="comboBox_ProjName" Margin="36,66,0,0" Width="350"/>
            <Label Content="指定要运行的项目文件的路径" VerticalAlignment="Top" Height="32" VerticalContentAlignment="Center" Margin="391,66,0,0" Foreground="#FF646464"/>


            <Label Content="参数:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" VerticalContentAlignment="Center" Margin="0,103,0,0"/>
            <TextBox x:Name="textBox_Args" Margin="36,103,394,295" TextWrapping="Wrap"/>
            <Label Content="传递给应用程序的参数。" VerticalAlignment="Top" Height="32" VerticalContentAlignment="Center" Margin="391,103,0,0" Foreground="#FF646464"/>


            <Label Content="体系结构:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" VerticalContentAlignment="Center" Margin="0,140,0,0"/>
            <ComboBox x:Name="comboBox_Arch" Margin="64,140,0,0" Width="322" SelectedIndex="0">
                <ComboBoxItem Content="x64" Tag="x64"/>
            </ComboBox>

        </Grid>
        <ui:ProgressRing x:Name="progressRing_Loading" IsActive="True" Width="50" Height="50" Visibility="Hidden"/>
        <Label x:Name="label_Loading" Content="加载中..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0" Visibility="Hidden"/>
    </Grid>
</ui:Page>
