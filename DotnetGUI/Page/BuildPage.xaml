<ui:Page x:Class="DotnetGUI.Page.BuildPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DotnetGUI.Page"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BuildPage" Loaded="Page_Loaded">

    <Grid Background="White">
        <Grid x:Name="grid_Main" Margin="10,10,10,10">
            <Label Content="Build" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold"/>
            <Label Content="生成项目、解决方案或基于文件的应用及其所有依赖项。" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FF646464" Margin="0,43,0,0"/>


            <Label Content="项目或解决方案:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,66,0,0" Height="32" VerticalContentAlignment="Center"/>
            <ComboBox x:Name="comboBox_Proj" Margin="106,66,0,0" Width="284"/>
            <Label Content="项目或解决方案:" VerticalAlignment="Top" Height="32" VerticalContentAlignment="Center" Margin="395,66,0,0" Foreground="#FF646464"/>


        </Grid>
        <ui:ProgressRing x:Name="progressRing_Loading" IsActive="True" Width="50" Height="50" Visibility="Hidden"/>
        <Label x:Name="label_Loading" HorizontalAlignment="Center" VerticalAlignment="Center" Content="加载中..." Margin="0,80,0,0" Visibility="Hidden"/>
    </Grid>
</ui:Page>
