<ui:Page x:Class="DotnetGUI.Page.NewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DotnetGUI.Page"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewPage" Loaded="Page_Loaded">

    <Grid Background="White">
        <Grid x:Name="grid_Main">
            <Label Content="New" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="30" FontWeight="Bold"/>
            <Label Content="根据指定的模板，创建新的项目、配置文件或解决方案。" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,53,0,0" FontSize="14" Foreground="#FF646464" d:LayoutOverrides="HorizontalAlignment"/>
            
            
            <Label Content="模板:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,76,0,0" Height="32" VerticalContentAlignment="Center"/>
            <ComboBox x:Name="comboBox_Template" HorizontalAlignment="Stretch" Margin="46,76,425,0" SelectedIndex="0"/>
            <Label Content="调用命令时要实例化的模板。 每个模板可能具有可传递的特定选项" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="380,76,10,0" Height="32" VerticalContentAlignment="Center" Foreground="#FF646464"/>
            
            
        </Grid>
        <ui:ProgressRing IsActive="True" x:Name="progressRing_Loading" Width="50" Height="50" Visibility="Hidden"/>
        <Label x:Name="label_Loading" Content="加载中" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0"/>
    </Grid>
</ui:Page>
